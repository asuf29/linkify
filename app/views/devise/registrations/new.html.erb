<div class="flex flex-col justify-center items-center w-full">
  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :first_name, class: "block text-base font-medium text-black" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
    </div>

    <div class="field mb-4">
      <%= f.label :last_name, class: "block text-base font-medium text-black" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
    </div>

    <div class="field mb-4">
      <%= f.label :username, class: "block text-base font-medium text-black" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
    </div>

    <div class="field mb-4">
      <%= f.label :email, class: "block text-base font-medium text-black" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, class: "block text-base font-medium text-black" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password_confirmation, class: "block text-base font-medium text-black" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-3 w-full border border-gray-300 rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: "p-3 w-full text-black bg-white border-2 border-black rounded-md hover:bg-black hover:text-white focus:outline-none focus:ring-2 focus:ring-black font-bold" %>
    </div>
  <% end %>

  <div class="">
    <%= render "devise/shared/links" %>
  </div>
</div>
