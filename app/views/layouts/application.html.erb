<!DOCTYPE html>
<html>
  <head>
    <title>linkify</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main>
        <div class="bg-white text-black py-4 w-full border">
          <div class="container mx-auto flex items-center justify-between px-4 lg:px-10">
            <%= link_to "LINKIFY", root_path, class: "text-xl font-bold" %>
            <nav class="hidden lg:flex space-x-6 ml-auto mr-4">
              <%= link_to "Home", root_path, class: "hover:text-[#ac76ff]" %>
              <%= link_to "About", "#about", class: "hover:text-[#ac76ff]" %>
              <%= link_to "Posts", "#posts", class: "hover:text-[#ac76ff]" %>
              <%= link_to "Favorites", "#favorites", class: "hover:text-[#ac76ff]" %>
              <%= link_to "Categories", "#categories", class: "hover:text-[#ac76ff]" %>
              <%= link_to "Products", "#products", class: "hover:text-[#ac76ff]" %>
            </nav>
            <div class="hidden lg:flex items-center space-x-4">
              <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-white text-black font-bold px-4 py-2 rounded-lg hover:bg-black hover:text-white" %>
            </div>
            <div class="lg:hidden">
              <button id="menu-toggle" class="focus:outline-none">
                <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>
          <div id="mobile-menu" class="hidden flex flex-col items-center bg-black text-white lg:hidden py-4 space-y-4">
              <%= link_to "Home", root_path, class: "hover:text-gray-300" %>
              <%= link_to "About", "#about", class: "hover:text-gray-300" %>
              <%= link_to "Posts", "#posts", class: "hover:text-gray-300" %>
              <%= link_to "Favorites", "#favorites", class: "hover:text-gray-300" %>
              <%= link_to "Categories", "#categories", class: "hover:text-gray-300" %>
              <%= link_to "Products", "#products", class: "hover:text-gray-300" %>
            <div class="flex flex-col items-center space-y-2">
              <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-white text-black font-bold px-6 py-2 rounded-lg hover:bg-gray-100" %>
            </div>
          </div>
        </div>
      <%= yield %>
    </main>

    <script>
      document.getElementById('menu-toggle').addEventListener('click', () => {
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
